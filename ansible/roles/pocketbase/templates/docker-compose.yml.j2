version: '3.8'

services:
  pocketbase:
    image: ghcr.io/muchobien/pocketbase:latest
    container_name: fitclash-pocketbase
    command: ["serve", "--http=0.0.0.0:8090", "--dir=/pb_data", "--publicDir=/pb_public", "--migrationsDir=/pb_migrations", "--hooksDir=/pb_hooks"]
    ports:
      - "8090:8090"
    volumes:
      - pocketbase_data:/pb_data
      - ./hooks:/pb_hooks:ro
      - ./migrations:/pb_migrations:ro
    environment:
      - POCKETBASE_ADMIN_EMAIL={{ lookup('env','POCKETBASE_ADMIN_EMAIL') | default('admin@fitclash.com') }}
      - POCKETBASE_ADMIN_PASSWORD={{ lookup('env','POCKETBASE_ADMIN_PASSWORD') | default('changeme123') }}
    restart: unless-stopped
    networks:
      - fitclash-network
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8090/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  caddy:
    image: caddy:2-alpine
    container_name: fitclash-caddy
    ports:
      - "80:80"
      - "443:443"
      - "443:443/udp"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_data:/data
      - caddy_config:/config
      - caddy_logs:/var/log/caddy
    depends_on:
      - pocketbase
    networks:
      - fitclash-network
    restart: unless-stopped

volumes:
  pocketbase_data:
    driver: local
  caddy_data:
    driver: local
  caddy_config:
    driver: local
  caddy_logs:
    driver: local

networks:
  fitclash-network:
    driver: bridge
  
