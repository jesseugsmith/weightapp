{
  "roles": [
    {
      "name": "super_admin",
      "description": "Full system access - can manage all competitions, users, and system settings"
    },
    {
      "name": "admin",
      "description": "Administrative access - can manage competitions and moderate users"
    },
    {
      "name": "competition_creator",
      "description": "Can create and manage their own competitions"
    },
    {
      "name": "user",
      "description": "Standard user - can participate in competitions and log weight entries"
    }
  ],
  "permissions": [
    {
      "name": "manage_users",
      "description": "Create, update, delete users and manage user roles",
      "resource": "users",
      "action": "manage"
    },
    {
      "name": "view_all_users",
      "description": "View all user profiles and data",
      "resource": "users",
      "action": "view_all"
    },
    {
      "name": "manage_competitions",
      "description": "Create, update, delete any competition",
      "resource": "competitions",
      "action": "manage"
    },
    {
      "name": "create_competitions",
      "description": "Create new competitions",
      "resource": "competitions",
      "action": "create"
    },
    {
      "name": "view_competitions",
      "description": "View competition details and participants",
      "resource": "competitions",
      "action": "view"
    },
    {
      "name": "join_competitions",
      "description": "Join and participate in competitions",
      "resource": "competitions",
      "action": "join"
    },
    {
      "name": "manage_weight_entries",
      "description": "Create, update, delete weight entries",
      "resource": "weight_entries",
      "action": "manage"
    },
    {
      "name": "view_own_data",
      "description": "View own weight entries and competition data",
      "resource": "weight_entries",
      "action": "view_own"
    },
    {
      "name": "manage_prizes",
      "description": "Create and manage competition prizes",
      "resource": "prizes",
      "action": "manage"
    },
    {
      "name": "send_invites",
      "description": "Send competition invitations to other users",
      "resource": "invites",
      "action": "create"
    },
    {
      "name": "manage_notifications",
      "description": "Send system notifications to users",
      "resource": "notifications",
      "action": "manage"
    },
    {
      "name": "view_analytics",
      "description": "View competition and user analytics",
      "resource": "analytics",
      "action": "view"
    }
  ],
  "role_permissions": [
    {
      "role": "super_admin",
      "permissions": [
        "manage_users",
        "view_all_users",
        "manage_competitions",
        "create_competitions",
        "view_competitions",
        "join_competitions",
        "manage_weight_entries",
        "view_own_data",
        "manage_prizes",
        "send_invites",
        "manage_notifications",
        "view_analytics"
      ]
    },
    {
      "role": "admin",
      "permissions": [
        "view_all_users",
        "manage_competitions",
        "create_competitions",
        "view_competitions",
        "join_competitions",
        "manage_weight_entries",
        "view_own_data",
        "manage_prizes",
        "send_invites",
        "manage_notifications",
        "view_analytics"
      ]
    },
    {
      "role": "competition_creator",
      "permissions": [
        "create_competitions",
        "view_competitions",
        "join_competitions",
        "manage_weight_entries",
        "view_own_data",
        "manage_prizes",
        "send_invites"
      ]
    },
    {
      "role": "user",
      "permissions": [
        "view_competitions",
        "join_competitions",
        "manage_weight_entries",
        "view_own_data"
      ]
    }
  ]
}
